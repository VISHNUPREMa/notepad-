<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document content</title>
  <style>
    body {
      background-color: #F3F8FF;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      margin-top: 100px;
    }

    #hd {
      font-size: 40px;
    }

    #div3 {
      margin-top: 20px;
    }

    button {
      margin-top: 20px;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #332941;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-12">
        <h1 id="hd">Content Page</h1>
        <div id="div3">
          <% if (result && Array.isArray(result)) { %>
            <% result.forEach(item => { %>
              <div>
                <h2><%- item.title %></h2>
                <h4><%- item.content %></h4>
              </div>
            <% }); %>
          <% } %>
          <button onclick="printPage()">Print</button>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

<script>
  function printPage() {
    window.print();
  }
</script>
