<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Library Search</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #EEF5FF;
      margin: 0;
      padding: 0;
    }

    .container-custom {
      background-color: white;
      padding: 30px;
      border-radius: 30px;
      margin-top: 50px;
      border: 2px solid #332941;
    }

    .centered {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .form-inline {
      margin-bottom: 20px;
    }

    #indexHeader {
      cursor: pointer;
    }

    #index li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
      padding-right: 10px;
    }

    #index li a {
      text-decoration: none;
      color: #332941;
    }
    #searchbtn{
      background-color: #332941;
      color: white;
     
    }

    #index li button {
      background-color: #332941;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      margin-left: 10px;
    }
  </style>
</head>
<body>
  <div class="container-fluid p-0">
    <div class="container text-center">
      <div class="container-custom">
        <form action="/notes/library" method="post">
          <h1 class="mb-4" id="indexHeader">Index</h1>
          <div class="centered form-inline">
            <div class="form-group mx-sm-3 mb-2">
              <input type="text" class="form-control" id="search" placeholder="Search" name="search">
            </div>
            <button id="searchbtn" class="btn " type="submit">Search</button>
          </div>
          <ul id="index">
            <% title.forEach(function(title) { %>
              <li>
                <a href="/notes/library/getClicked/<%= title.title %>">
                  <h5><%= title.title %></h5>
                </a>
                <form action="/notes/library/delete/<%= title._id %>" method="get">
                  <button type="submit">Delete</button>
                </form>
              </li>
            <% }); %>
          </ul>
          <div>
            <h2><%= locals.searchtitle%></h2>
            <p><%=locals.searchcontent%></p>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const indexHeader = document.getElementById('indexHeader');
      indexHeader.addEventListener('click', function() {
        window.location.href = '/notes/library';
      });
    });
  </script>
</body>
</html>



